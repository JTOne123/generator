<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
    <TypeScriptToolsVersion>3.3</TypeScriptToolsVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="KY.Generator.CLI.Core.Standalone" Version="2.5.1" />
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Design" Version="2.2.0" PrivateAssets="All" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="rem       dotnet &quot;%25USERPROFILE%25\.nuget\packages\ky.generator.cli.core.standalone\2.5.0\tools\KY.Generator.dll&quot; &quot;$(ProjectDir)generator.json&quot; &quot;$(SolutionDir)..\Angular\src\app&quot;" />
  </Target>

</Project>
