<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <Version>2.0.0</Version>
    <Authors>KY-Programming</Authors>
    <Product>KY.Generator</Product>
    <Description>.net Core CLI minimal for KY-Generator.
This executable contains only the minimal required features.</Description>
    <Copyright>2019 - KY-Programming</Copyright>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/KY-Programming/generator</PackageProjectUrl>
    <PackageIconUrl>https://ky-programming.de/images/logos/128.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/KY-Programming/generator</RepositoryUrl>
    <PackageTags>KY-Generator KY Generator KY.Generator .netCore CLI</PackageTags>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="KY.Core.Common" Version="4.5.0">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Core\KY.Generator.Core.csproj">
      <PrivateAssets>all</PrivateAssets>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="bin\Release\netcoreapp2.2\*.dll">
      <PackagePath>tools\</PackagePath>
      <Pack>true</Pack>
    </Content>
    <Content Include="bin\Release\netcoreapp2.2\KY.Generator.CLI.Core.Minimal.deps.json">
      <PackagePath>tools\</PackagePath>
      <Pack>true</Pack>
    </Content>
    <Content Include="bin\Release\netcoreapp2.2\KY.Generator.CLI.Core.Minimal.runtimeconfig.json">
      <PackagePath>tools\</PackagePath>
      <Pack>true</Pack>
    </Content>
  </ItemGroup>

</Project>
