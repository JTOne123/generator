<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="KY.Generator.CLI.Core.Standalone" Version="2.7.1" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="dotnet &quot;%25USERPROFILE%25\.nuget\packages\ky.generator.cli.core.standalone\2.7.1\tools\KY.Generator.dll&quot; &quot;$(ProjectDir)generator.json&quot; &quot;$(ProjectDir)Output&quot;" />
  </Target>

</Project>
